{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "sourceMap": true,
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "outDir": "loaders/build",
    "plugins": [{ "name": "sample-ts-plugin" }]
  },
  "include": ["loaders/src/**/*"],
  "exclude": ["node_modules", "**/*.test.ts", "**/*.generated.**"]
}
